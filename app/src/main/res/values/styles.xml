<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Change the default appearance for TextInputLayout from FilledBox to OutlinedBox -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <item name="materialThemeOverlay">@style/CustomOverlay</item>
    </style>

    <!-- Change the foreground and background color for FloatingActionButton -->
    <style name="CustomOverlay">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="CustomHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/input_hint_size</item>
    </style>
</resources>